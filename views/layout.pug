          display: none;
        }
        .nav-logo-black{
          display: inline;
        }   
        #icon{
          color: black;
        }

    else
      script.
        //navbar color change on scroll
        $(document).ready(function(){
          $(window).scroll(function(){
            if($(window).scrollTop() + $(".navbar").outerHeight() > $(".jumbotron").outerHeight()){
                $(".navbar").css({"background-color":"white"});
                $(".navbar").css({"box-shadow":"0 8px 6px -6px"});            
                $("#icon").css({"color":"black"});               
                $(".nav-logo-white").css({"display":"none"})
                $(".nav-logo-black").css({"display":"inline"})      
                $(".login").css({"border-color": "#3F87C5"})
                $(".login").css({"color": "#3F87C5"})  
            }
            else{
                $(".navbar").css({"background-color":"transparent"});
                $(".navbar").css({"box-shadow":"none"});
                $("#icon").css({"color":"white"});
                $(".nav-logo-white").css({"display":"inline"})     
                $(".nav-logo-black").css({"display":"none"}) 
                $(".login").css({"border-color": "white"})
                $(".login").css({"color": "white"})  
            }
          })
        })
      

